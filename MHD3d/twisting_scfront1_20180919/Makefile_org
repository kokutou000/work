FC = f90

EXEC = nl3d_single_model_4.1024.1024
OBJ = constants.o common.o job.o pset.o iset.o rkg.o out.o mhd.o urand1.o
INC = constants.f90 
OPT = -ftrace
#OPT = -P auto -ftrace

all : main.f90 $(OBJ)
	$(FC) $(OPT) -o $(EXEC) main.f90 $(OBJ)

constants.o : constants.f90
	$(FC) $(OPT) -c constants.f90

common.o : constants.o common.f90
	$(FC) $(OPT) -c common.f90

job.o : constants.o common.f90
	$(FC) $(OPT) -c job.f90

pset.o : common.o pset.f90
	$(FC) $(OPT) -c pset.f90

iset.o : common.o iset.f90
	$(FC) $(OPT) -c iset.f90

rkg.o : common.o rkg.f90
	$(FC) $(OPT) -c rkg.f90

out.o : common.o out.f90
	$(FC) $(OPT) -c out.f90

mhd.o : common.o mhd.f90
	$(FC) $(OPT) -c mhd.f90

urand1.o : urand1.f
	$(FC) $(OPT) -c urand1.f

clean : 
	rm *.o
